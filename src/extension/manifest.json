{
  "name": "Form Filler for Testers",
  "version": "0.15.0",
  "manifest_version": 3,
  "author": "Bruno Nunes <https:/nunes.dev.br/>",
  "icons": {
    "16": "autofill_16x16.png"
  },
  "description": "Enable testers to fill forms automatically/on-demand based on (sets of) rules they wrote / captured.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_title": "Form Filler",
    "default_icon": {
      "16": "autofill_16x16.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "generated/form-filler-content-packed.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "options_page": "options.html",
  "background": {
    "service_worker": "events.js"
  }
}